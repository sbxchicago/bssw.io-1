
<% if @quote %>
<!-- Displays the Quote Slider for only homepage -->
<div class="quote">
  <div class="container">
    <div class="row">

      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="quote-circle"></div>
        <div class="quote-text">
          <%= quote.text %>
          <div class="quote-author"><%= quote.author %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Quote Slider -->
<% end %>


